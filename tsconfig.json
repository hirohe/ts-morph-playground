{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "lib",
    "types": [
      "node"
    ],
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
